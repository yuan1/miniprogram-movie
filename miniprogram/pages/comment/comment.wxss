.comment-info {
  width: 100%;
  height: 600rpx;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size: 100% auto;
}

.comment-info:after {
  content: "";
  width: 100%;
  height: 650rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5px);
  z-index: 1;
}

.comment-image {
  width: 400rpx;
  height: 500rpx;
  object-fit: cover;
  z-index: 2;
}

.comment-title {
  font-size: 50rpx;
  margin-top: 10px;
  color: #fff;
  z-index: 2;
}
